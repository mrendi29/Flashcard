<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootview"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"


        android:background="@drawable/card_background"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card2_answer"
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:layout_alignBaseline="@+id/answer2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_answer"
        android:visibility="invisible"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:gravity="center"/>

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:background="@drawable/card_answer"
        android:elevation="20dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="158dp"
        android:background="@drawable/card_answer"
        android:elevation="20dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/card_answer"
        android:elevation="20dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="George H Bush"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:src="@drawable/eye_on"/>

    <ImageView
        android:id="@+id/toggle_choices_invisibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:src="@drawable/eye_off"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/plus_sign"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_alignBottom="@+id/toggle_choices_visibility"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_iconmonstr_plus_6" />

    <ImageView
        android:id="@+id/pencil_sign"
        android:layout_width="51dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/toggle_choices_visibility"
        android:layout_alignStart="@+id/card2_answer"
        android:src="@drawable/ic_iconmonstr_pencil_9" />

    <ImageView
        android:id="@+id/next_sign"
        android:layout_width="52dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:elevation="10dp"
        app:srcCompat="@drawable/ic_iconmonstr_arrow_25" />

</RelativeLayout>